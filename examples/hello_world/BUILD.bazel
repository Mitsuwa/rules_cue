cue_exported_files(
    name = "de",
    module = _MODULE,
    srcs = ["de.cue"],
    deps = ["//examples/hello_world/lang:cue_de_library"],
)

cue_exported_files(
    name = "en",
    module = _MODULE,
    srcs = ["en.cue"],
    deps = ["//examples/hello_world/lang:cue_en_library"],
)
