load(
    "//cue:cue.bzl",
    "cue_exported_files",
    "cue_exported_instance",
)

_MODULE = "//examples/hello_world/cue.mod"

cue_exported_files(
    name = "hello_world",
    module = _MODULE,
    srcs = ["hello_world.cue"],
)

cue_exported_files(
    name = "message",
    module = _MODULE,
    srcs = ["hello_world.cue"],
    expression = "message",
    output_format = "text",
